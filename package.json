{
  "name": "ticket-office",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "@types/imapflow": "^1.0.19",
    "@types/mailparser": "^3.4.4",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start:client": "cd client && npm run dev",
    "start:server": "cd server && bun run --watch server.ts",
    "start": "concurrently \"npm run start:client\" \"bun run start:server\""
  },
  "dependencies": {
    "@types/imapflow": "^1.0.19",
    "imapflow": "^1.0.164",
    "mailparser": "^3.7.1"
  }
}
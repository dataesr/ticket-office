{
  "name": "ticket-office",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start:client": "cd client && npm run dev",
    "start:server": "cd server && bun run server.ts",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\""
  },
  "dependencies": {
    "@eslint/config-array": "^0.18.0",
    "@eslint/object-schema": "^2.1.4",
    "formidable": "^3.5.1",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",
    "superagent": "^10.1.0",
    "uuid": "^10.0.0"
  }
}
